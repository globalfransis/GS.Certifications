@inject IConfiguration Configuration
@using System.Web;
@using Microsoft.Extensions.Configuration
@using GS.Certifications.Web.Areas.Security.Pages
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" class="login">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@HttpUtility.HtmlDecode(Configuration.GetSection("Application").GetValue(typeof(string), "Name").ToString()) - @ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.png" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @*<link  rel="stylesheet" href="~/css/bootstrap-small.css" />*@
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/b39e955174.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/menu.js" asp-append-version="true"></script>
    <style>
        .loading {
            display: flex;
            justify-content: center;
        }

        .loading--full-height {
            align-items: center;
            height: 100%;
        }

        .loading::after {
            content: "";
            width: 100px;
            height: 100px;
            border: 10px solid #dddddd;
            border-top-color: #50b5da;
            border-radius: 50%;
            transform: rotate(0.16turn);
            animation: loading 1s ease infinite;
            left: 50%;
            top: 50%;
            display: block;
            position: absolute;
            z-index: 999;
        }

        @@keyframes loading {
            /* Safari support */
            from {
                transform: rotate(0turn);
            }

            to {
                transform: rotate(1turn);
            }
        }

        #top {
            z-index: 999;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            display: none;
            position: absolute;
            background-color: #50b5da;
            color: #aaaaaa;
            opacity: .4;
            filter: alpha(opacity=30);
        }

        #layoutbody.active {
            opacity: 0.5;
            pointer-events: none;
            z-index: 999 !important;
        }

        .dropdown-item {
            width: 500px !important;
        }

        .fondo {
            background: url('@Url.Content("~/img/login-background1.png")') no-repeat center;
            background-size: cover;
            /* min-height: auto; */
            /* border-radius: 0 10px 10px 0; */
            padding: 0;
            /*position: absolute;*/
            top: 0;
            bottom: 0;
            right: 0;
            float: left;
        }

        @@media (max-width: 1000px) {
            .fondo {
                /*width: 10%;*/
                max-width: 100%;
                height: auto;
                background: none;
                background-size: contain;
                /*Sin imagen*/
                /*max-width: 0%;
                        height: 0%;*/
            }

                .fondo div {
                    margin: 0 10px
                }
        }
    </style>
</head>
<body id="layoutbody">
    <div class="top" id="spinner" style="display:none">
        <div class="loading loading--full-height"></div>
    </div>
    <div class="container-fluid">
        <div class="row h-75">
            <div class="col-lg-6 col-sm-12 col-12 col-md-12 d-flex welcome-login-container fondo">
                <div class="row">
                    <div class="px-5 pt-5 mt-5">
                    </div>

                </div>

            </div>

            <div class="col-lg-6 col-sm-12 vcenter d-flex align-items-center justify-content-center "
                 style="background-color: #FEFEFE;">

                @if (!Model.PasswordRecoveryRequested)
                {

                    <div class="col-lg-8 col-xl-6 col-sm-12 col-md-8 col-12 p-4">
                        <div class="justify-content-center">
                            <div style="display:flex; justify-content:center">
                                @* <img src="~/img/logo/ColoniaExpressLogo.png" alt="system_logo" class="img img-responsive img-fluid" /> *@
                            </div>

                            <div class="col-lg-12" style="position:relative">
                                <hr />
                                <h1 class="welcome-login">
                                    Portal de Certificaciones
                                </h1>
                                <form method="post" action="" style="background-color: transparent;">

                                    <div class="form-group col-12 text-center">
                                        <h2 class="pb-2">Ingreso al sistema</h2>
                                    </div>

                                    @if (!Model.ModelState.IsValid)
                                    {
                                        @if (Model.SessionExpired.HasValue && Model.SessionExpired.Value)
                                        {
                                            <div class="alert alert-danger text-center">
                                                @Html.Raw(Model.SessionExpiredMessage)
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="form-group col-12">
                                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                                            </div>
                                        }
                                    }

                                    @if (!Model.PasswordForgotten)
                                    {
                                        <div class="form-group col-12 d-flex justify-content-center">
                                            <div class="col-12">
                                                <label class="col-form-label login-side-text" placeholder="Default input" asp-for="Login_or_Email">Nombre de usuario o email</label>
                                                <input class="form-control" placeholder="Ingresar usuario o email" asp-for="Login_or_Email" autofocus />
                                                <span asp-validation-for="Login_or_Email" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-group col-12 pb-3 d-flex justify-content-center">
                                            <div class="col-12">
                                                <label class="col-form-label login-side-text" asp-for="Login_or_Email">Contrase&ntilde;a</label>
                                                <div class="input-group" input-password>
                                                    <input class="form-control pw" placeholder="Ingresar contraseña" asp-for="Password" type="password" />
                                                    <button type="button" class="btn btn-outline-primary btn-sm" style="width: 3em">
                                                        <i class="fas fa-eye-slash"></i>
                                                    </button>
                                                </div>
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="form-group col-12 d-flex justify-content-center">
                                            <div class="col-12 mb-4">
                                                <label class="col-form-label login-side-text" placeholder="Default input" asp-for="Login_or_Email">Email</label>
                                                <input class="form-control" placeholder="Ingresar email para recuperar contraseña" asp-for="Login_or_Email" autofocus />
                                                <span asp-validation-for="Login_or_Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                    }

                                    <input asp-for="ReturnUrl" />

                                    <div class="form-group col-12 text-center">
                                        <div class="">
                                            @if (Model.PasswordForgotten)
                                            {
                                                <div class="col-12">
                                                    <button type="submit" asp-page-handler="PasswordRecovery" class="login-side-text btn btn-primary w-100 login-submit-button login-submit-button">Aceptar</button>
                                                    <a asp-page="/Login" asp-area="Security" class="login-side-text btn btn-link w-100">Cancelar</a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="col-12 p-0 mb-3">
                                                    <button type="submit" asp-page-handler="" tabindex="0" class="login-side-text btn btn-primary w-100 login-submit-button" onclick="RedirectToOption(0, 0, '/index')">Ingresar</button>
                                                </div>
                                                <div class="col-12">
                                                    <button asp-page-handler="PasswordForgotten" type="submit" class="login-side-text btn btn-link w-100">Olvid&eacute; mi contraseña</button>
                                                </div>
                                            }

                                        </div>
                                    </div>

                                </form>

                            </div>
                        </div>

                        <div class="login-side-text">
                            <environment exclude="Production">
                                <div class="" style="font-size:14px"> (Entorno: @Model.WebHostEnvironment.EnvironmentName)</div>
                            </environment>
                        </div>

                    </div>

                }
                else
                {
                    <div class="col-lg-6 col-sm-12 col-md-8 col-12 justify-content-center p-4">
                        <div class="col-lg-12">

                            @if (!string.IsNullOrWhiteSpace(ViewData["PasswordChangeRequestedMessage"]?.ToString()))
                            {
                                <div class="alert alert-info">@Html.Raw(ViewData["PasswordChangeRequestedMessage"].ToString())</div>
                            }

                            <a asp-page="/Login" asp-area="Security" class="login-side-text btn btn-link w-100">Volver al inicio</a>

                        </div>
                    </div>
                }

            </div>


        </div>
    </div>

