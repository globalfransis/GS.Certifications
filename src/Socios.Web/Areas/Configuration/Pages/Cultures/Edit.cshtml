@page
@using Socios.Web.Areas.Configuration.Pages.Cultures
@model EditModel

<form method="post" action="" id="main">
    <div class="col-12">

        <!-- Title -->
        <div class="col-12 mt-4">
            <p class="h5">@loc["Datos Configuración Regional"]</p>
        </div>
        <!-- Title end -->

        <div class="card">
            <input asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="form-group required col-lg-4 col-sm-12 mb-4">
                        <label class="control-label" asp-for="Code"></label>
                        <input class="form-control" asp-for="Code" maxlength="5" readonly="readonly" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="form-group required col-lg-4 col-sm-12 mb-4">
                        <label class="control-label" asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" maxlength="100" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group required col-lg-4 col-sm-12 mb-4">
                        <label class="control-label" asp-for="Language"></label>
                        <input class="form-control" asp-for="Language" maxlength="2" readonly="readonly" />
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table buttons -->
    <div class="col-12 d-flex justify-content-end mb-3 mt-3">
        <div>
            <button onclick="showSpinner(true)" class="btn btn-primary y mr-2 btn-sm" type="submit" form="main">@loc["Aceptar"]</button>
            @*<gsf-cancel-link></gsf-cancel-link>*@
            <a asp-page="/Cultures/Detail" class="btn btn-outline-primary btn-sm mr-2" asp-area="Configuration" asp-route-id="@Model.Id">@loc["Cancelar"]</a>
        </div>
    </div>
</form>
